{% extends 'base.html.twig' %}

{% block body %}

<H1>{{ "Login" | trans }}</H1>

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <label for="username">{{ "Email" | trans }} : </label>
            <input placeholder={{ "Email.address" | trans }} required id="username" name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="password">{{ "Password" | trans }}  : </label>
            <input placeholder={{ "Password" | trans }} required id="password" name="_password" type="password" class="form-control">
        </div>
        <br>
        <div class="form-group">
            <button type="submit" class="btn btn-success">{{ "Login" | trans }} </button>
        </div>
    </form>


{% endblock %}